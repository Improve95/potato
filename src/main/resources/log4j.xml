<?xml version="1.0" encoding="UTF-8"?>

<Configuration status="INFO">

    <Appenders>
        
        <File name="potatoLogINFO" fileName="src/logs/info.log" append="false">
            <PatternLayout>
                <Pattern>%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Pattern>
            </PatternLayout>
        </File>
        <File name="potatoLogWARN" fileName="src/logs/warn.log" append="false">
            <PatternLayout>
                <Pattern>%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Pattern>
            </PatternLayout>
        </File>
        <File name="potatoLogERROR" fileName="src/logs/error.log" append="false">
            <PatternLayout>
                <Pattern>%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Pattern>
            </PatternLayout>
        </File>

    </Appenders>

    <Loggers>

        <Root level="info">
            <AppenderRef ref="potatoLogINFO" level="info"/>
            <AppenderRef ref="potatoLogWARN" level="warn"/>
            <AppenderRef ref="potatoLogERROR" level="error"/>
        </Root>

    </Loggers>

</Configuration>